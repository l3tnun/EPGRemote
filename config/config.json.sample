            "command"   : "/usr/local/bin/recbond --driver /hoge/BonDriver_Proxy_S.so --sid <sid> <channel> - - "
        },
        {
            "id"        : 2,
            "name"      : "PT3-S2",
            "types"     : [ "BS", "CS" ],
            "command"   : "/usr/local/bin/recbond --driver /hoge/BonDriver_Proxy_S.so --sid <sid> <channel> - - "
