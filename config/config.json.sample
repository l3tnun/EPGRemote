            "command"   : "/usr/local/bin/recbond --driver /hoge/BonDriver_Proxy_T.so --sid <sid> <channel> - - "
        },
        {
            "id"        : 4,
            "name"      : "PT3-T2",
            "types"     : [ "GR" ],
            "command"   : "/usr/local/bin/recbond --driver /hoge/BonDriver_Proxy_T.so --sid <sid> <channel> - - "
        }
